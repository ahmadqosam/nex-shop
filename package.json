{
  "name": "nex-shop",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "docker compose up -d --wait && turbo dev",
    "dev:services": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "generate": "bash scripts/scaffold-service.sh",
    "seed:images": "bash scripts/download-seed-images.sh",
    "infra:up": "docker compose up -d --wait",
    "infra:down": "docker compose down"
  },
  "devDependencies": {
    "turbo": "^2.5.0",
    "prettier": "^3.4.2"
  }

}
